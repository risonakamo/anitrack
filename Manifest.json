{
    "manifest_version":2,
    "name":"anitrack",
    "version":"2.3.0",

    "permissions":["tabs","storage","https://anilist.co/user/*"],

    "browser_action":{
        "default_popup":"popup/popup.html",
        "default_icon":"popup/at-logo.png"
    },

    "content_scripts":[{
        "matches":["https://anilist.co/user/*"],
        "js":["contentscripts/alisthook2.js"],
        "css":["contentscripts/hooked.css"],
        "run_at":"document_end"
    }],

    "icons":{
        "16":"popup/at-logo.png",
        "48":"popup/at-logo.png",
        "128":"popup/at-logo.png"
    }
}
