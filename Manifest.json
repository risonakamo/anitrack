{
    "name":"Anitrack 2",
    "version":"3.1.1",

    "short_name":"anitrack2",
    "description":"Anilist.co show tracker & helper",
    "homepage_url":"https://github.com/risonakamo/anitrack",
    "manifest_version":3,

    "permissions":[
        "tabs",
        "storage"
    ],

    "host_permissions":[
        "https://anilist.co/user/*"
    ],

    "content_scripts":[{
        "matches":["https://anilist.co/user/*"],
        "js":["build2/anilist-hook.js"],
        "run_at":"document_end"
    }],

    "web_accessible_resources":[{
        "resources":["build2/style.css"],
        "matches":["https://anilist.co/*"]
    }],

    "action":{
        "default_icon":{
            "16":"web/assets/at-logo.png",
            "32":"web/assets/at-logo.png",
            "128":"web/assets/at-logo.png"
        },
        "default_title":"Anitrack",
        "default_popup":"build/popup/index.html"
    },

    "icons":{
        "16":"web/assets/at-logo.png",
        "32":"web/assets/at-logo.png",
        "128":"web/assets/at-logo.png"
    }
}